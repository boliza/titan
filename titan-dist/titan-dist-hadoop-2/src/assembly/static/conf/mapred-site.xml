<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
  <property>
    <name>mapreduce.framework.name</name>
    <!-- The default framework is "local".  This does not require a
         Hadoop/MapReduce or any other external services.  It's easier
         to get started with the "local" framework than with the
         other frameworks.

         Change to "yarn" or "classic" to run MR on an actual cluster.
         A remote job tracker may require some additional properties,
         such as mapreduce.jobtracker.address and fs.default.name or
         fs.defaultFS.  See the Hadoop manual for more information. -->
    <value>local</value>
    <!-- <value>yarn</value> -->
    <!-- <value>classic</value> -->
  </property>
</configuration>
