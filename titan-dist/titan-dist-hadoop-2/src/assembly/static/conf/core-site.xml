<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
    <!-- When using the yarn or classic JobRunner and HDFS, it's
         it's usually a good idea to set the default filesystem
         to a hdfs:// URI pointed at your Hadoop NameNode metadata
         service.

         The following setting is _not_ required when using the
         local JobRunner.
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://localhost:9000</value>
    </property>
     -->
</configuration>
